# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Application
GET		/							controllers.Application.index()

# Events
GET		/events						controllers.Events.events()
POST	/events						controllers.Events.add()
DELETE	/events/:token				controllers.Events.delete(token : String)
PUT		/events/:token				controllers.Events.update(token : String)
GET		/events/:token				controllers.Events.event(token : String)

# Medias
GET		/medias						controllers.Medias.medias()
POST	/events/:token/medias		controllers.Medias.add(token : String)
DELETE	/medias/:id					controllers.Medias.delete(id : Integer)
PUT		/medias/:id					controllers.Medias.update(id : Integer)
GET		/medias/:id					controllers.Medias.media(id : Integer)

# Users
GET		/users						controllers.Users.users()
POST	/users						controllers.Users.add()
DELETE	/users/:id					controllers.Users.delete(id : Integer)
PUT		/users/:id					controllers.Users.update(id : Integer)
GET		/users/:id					controllers.Users.user(id : Integer)

# Map static resources from the /public folder to the /assets URL path
GET		/assets/*file				controllers.Assets.at(path="/public", file)
